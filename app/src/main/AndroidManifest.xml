<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="petegabriel.com.yamda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Listen for boot event -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.dev.moviedb.YamdaApplication"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Activity -->
        <activity
            android:name="com.dev.moviedb.mvvm.components.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dev.moviedb.activity.DetailMovieActivity"
            android:label="@string/details_label"></activity>
        <activity
            android:name="com.dev.moviedb.activity.DetailRecordActivity"
            android:label="@string/details_label" />
        <activity
            android:name="com.dev.moviedb.activity.UserPreferencesActivity"
            android:parentActivityName="com.dev.moviedb.activity.SearchOptionsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.dev.moviedb.activity.SearchOptionsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.dev.moviedb.activity.SearchQueryOptionActivity"
            android:parentActivityName="com.dev.moviedb.activity.SearchOptionsActivity" />

        <service
            android:name="com.dev.moviedb.service.UpdateItemDetailsService"
            android:exported="false" />

        <receiver
            android:name="com.dev.moviedb.storage.repo.messenger.UpdateItemMessageReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="new.item.received.details.would.be.appreciated" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.dev.moviedb.service.FetchInTheatersMoviesService"
            android:exported="false" />

        <receiver
            android:name="com.dev.moviedb.storage.repo.messenger.FetchInTheatersMoviesResultsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="action.intheaters.movies.list" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.dev.moviedb.service.FetchUpcomingMoviesService"
            android:exported="false" />

        <receiver
            android:name="com.dev.moviedb.storage.repo.messenger.FetchUpcomingMoviesResultsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="action.upcoming.movies.list" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.dev.moviedb.service.FetchPopularMoviesService"
            android:exported="false" />

        <receiver
            android:name="com.dev.moviedb.storage.repo.messenger.FetchPopularMoviesResultsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="action.most.popular.movies.list" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.dev.moviedb.service.NotificationReleaseService"
            android:exported="false" />

        <receiver
            android:name="com.dev.moviedb.network.ConnectivityReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.dev.moviedb.storage.repo.messenger.OnBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.dev.moviedb.storage.repo.messenger.OnPreferencesChangeReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="on.preferences.change.message.received" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.dev.moviedb.storage.repo.db.DataProvider"
            android:authorities="petegabriel.com.yamdaprov"
            android:enabled="true"
            android:exported="true"/>

        <activity
            android:name="com.dev.moviedb.mvvm.components.tabs_layout.TabOptionsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>