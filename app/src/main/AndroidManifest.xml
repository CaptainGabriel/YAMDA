<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ricardopeixe.moviedb">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Listen for boot event -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
            android:name=".YamdaApplication"
            android:allowBackup="true"
            android:configChanges="locale"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activity.DetailMovieActivity"
                android:label="@string/details_label">
        </activity>
        <activity
                android:name=".activity.DetailRecordActivity"
                android:label="@string/details_label"/>
        <activity
                android:name=".activity.UserPreferencesActivity"
                android:parentActivityName=".activity.SearchOptionsActivity"
                android:theme="@style/AppTheme"/>
        <activity
                android:name=".activity.SearchOptionsActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.SearchQueryOptionActivity"
                android:parentActivityName=".activity.SearchOptionsActivity"/>

        <service
                android:name=".service.UpdateItemDetailsService"
                android:exported="false"/>

        <receiver
                android:name=".storage.repo.messenger.UpdateItemMessageReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="new.item.received.details.would.be.appreciated"/>
            </intent-filter>
        </receiver>

        <service
                android:name=".service.FetchInTheatersMoviesService"
                android:exported="false"/>

        <receiver
                android:name=".storage.repo.messenger.FetchInTheatersMoviesResultsReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="action.intheaters.movies.list"/>
            </intent-filter>
        </receiver>

        <service
                android:name=".service.FetchUpcomingMoviesService"
                android:exported="false"/>

        <receiver
                android:name=".storage.repo.messenger.FetchUpcomingMoviesResultsReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="action.upcoming.movies.list"/>
            </intent-filter>
        </receiver>

        <service
                android:name=".service.FetchPopularMoviesService"
                android:exported="false"/>

        <receiver
                android:name=".storage.repo.messenger.FetchPopularMoviesResultsReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="action.most.popular.movies.list"/>
            </intent-filter>
        </receiver>

        <service
                android:name=".service.NotificationReleaseService"
                android:exported="false"/>

        <receiver
                android:name=".network.ConnectivityReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".storage.repo.messenger.OnBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver
                android:name=".storage.repo.messenger.OnPreferencesChangeReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="on.preferences.change.message.received"/>
            </intent-filter>
        </receiver>

        <provider
                android:name=".storage.repo.db.DataProvider"
                android:authorities="com.example.ricardopeixe.moviedb.yamdaprov"
                android:enabled="true"
                android:exported="true">
        </provider>
    </application>

</manifest>
