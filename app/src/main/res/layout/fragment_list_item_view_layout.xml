<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

        <ImageView
            tools:src="@drawable/list_placeholder"
            android:id="@+id/card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="Movie's thumbnail" />

    <TextView
        tools:text="Title goes here"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textSize="18dp"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/card_image"
        />

    <ImageView
        android:src="@drawable/ic_stars_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star_icon"
        android:paddingBottom="@dimen/action_all_directions_padding"
        android:paddingRight="@dimen/action_all_directions_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        tools:text="7.5"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/vote_average_textview"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/star_icon"
        android:layout_toStartOf="@id/star_icon"
        />



</RelativeLayout>

