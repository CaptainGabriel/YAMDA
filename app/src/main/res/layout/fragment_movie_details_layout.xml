<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
                android:id="@+id/details_main_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:contentDescription="main picture of the item"/>

        <TextView
                android:id="@+id/details_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tagline"
                tools:text="Tag Line goes here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textStyle="italic"
                android:textSize="14dp"/>


        <TextView
                android:id="@+id/details_main_genre"
                tools:text="Action, Suspense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Pontuação -->
            <TextView
                    android:id="@+id/details_classification"
                    tools:text="8.5"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/action_all_directions_padding"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/action_all_directions_padding"/>

            <!-- Release Date -->
            <TextView
                    android:id="@+id/details_release_date"
                    tools:text="21/12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/action_all_directions_padding"/>

            <ImageView
                    android:src="@drawable/ic_today_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/action_all_directions_padding"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Length do filme -->
            <TextView
                    android:id="@+id/details_runtime"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    tools:text="1h30"
                    android:padding="@dimen/action_all_directions_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:visibility="invisible"
                    android:id="@+id/details_runtime_icon"
                    tools:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/action_all_directions_padding"/>


            <TextView
                    android:id="@+id/details_status"
                    tools:text="Post Prod."
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:padding="@dimen/action_all_directions_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/details_status_icon"
                    android:src="@drawable/ic_help_black_24dp"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/action_all_directions_padding"/>

        </LinearLayout>

        <TextView
                android:id="@+id/imdb_textview"
                tools:text="3456267"
                tools:visibility="visible"
                android:visibility="invisible"
                android:padding="@dimen/action_all_directions_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/youtubeStartPlaying"
                android:src="@drawable/ic_youtube_play_white_24dp"
                app:fabSize="normal"
                app:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:pressedTranslationZ="12dp"/>
    </LinearLayout>
</ScrollView>




