<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pattensBlue"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.dev.moviedb.mvvm.components.front.popular_tab.PopularInfoFragment">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/popularCardView"
        card_view:cardBackgroundColor="@color/aliceBlue"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/donJuan"
            android:text="@string/popular_card_title"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/popularRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/topRatedCardView"
        android:layout_marginTop="@dimen/card_bottom_padding"
        card_view:cardBackgroundColor="@color/aliceBlue"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_title_height"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/donJuan"
            android:text="Top Rated"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/topRatedRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>

</FrameLayout>
