<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/pattensBlue"
    tools:context="com.dev.moviedb.mvvm.moviesTab.MoviesTabFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/pattensBlue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:minHeight="154dp"
                android:weightSum="1"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/spotlight_movie_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/aliceBlue"
                        tools:src="@android:drawable/ic_menu_always_landscape_portrait"/>

                    <TextView
                        android:id="@+id/spotlight_movie_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/aliceBlue"
                        tools:textColor="#000"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="30dp"
                        tools:text="Movie Name"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/spotlight_movie_rating"
                        android:textColor="@color/tumbleweed"
                        android:background="@color/aliceBlue"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:textAlignment="textEnd"
                        tools:text = "7.3"
                        android:textSize="@dimen/text_size_medium"
                        android:drawableEnd="@drawable/ic_star_rate"
                        android:drawableTint="@color/tumbleweed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/spotlight_movie_description"
                        android:textColor="@color/medium_grey"
                        android:background="@color/aliceBlue"
                        android:textStyle="italic"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:paddingTop="2dp"
                        tools:text = "Overview goes here"
                        android:autoSizeTextType="uniform" />

                </LinearLayout>

            </LinearLayout>


            <include layout="@layout/include_movie_item_cardview"
                android:id="@+id/popularCardView"/>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/include_movie_item_cardview"
                android:layout_marginTop="10dp"
                android:id="@+id/topRatedCardView"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
